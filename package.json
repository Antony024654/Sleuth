{
  "name": "sleuth-proxy",
  "version": "1.0.0",
  "description": "Lokaler Proxy zur CORS-Bypass-Unterstützung für Sleuth",
  "main": "proxy.js",
  "scripts": {
    "start": "node proxy.js",
    "lint": "eslint ./modules ./script.js || echo 'Linting abgeschlossen mit Warnungen'"
  },
  "keywords": ["proxy", "CORS", "Sleuth", "metadata"],
  "author": "Thorsten Bylicki",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "eslint": "^8.57.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off"
    }
  }
}
